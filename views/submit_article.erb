<% if @error %>
<h2>Error! <%= @error %> </h2>
<% end %>

<form action="/articles/new" method="post">
  <div>
    <label for="article">New Article Title:</label>
    <input type="text" id="article" name="title" value=<%=@title%>>
  </div>

  <div>
    <label for="article">New Article URL:</label>
    <input type="url" id="url" name="url" value=<%=@url%>>
  </div>

  <div>
    <label for="article">Description:</label>
    <input type="text" id="description" name="description" value=<%=@description%>>
  </div>

  <input type="submit" value="Submit">
</form>
